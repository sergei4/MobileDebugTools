<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane fx:id="pane" minHeight="400" minWidth="200" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.sergei4.mobile.tools.mdbgui.ui.controllers.screencapture.ScreenCaptureController">
    <center>
        <StackPane fx:id="paneImageContainer" minHeight="0.0" minWidth="0.0" style="-fx-background-color: #ffffff;"
                   BorderPane.alignment="CENTER">
            <ImageView fx:id="imageViewCapture" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Image url="@../images/ic_screenshot.png"/>
            </ImageView>
            <BorderPane.margin>
                <Insets bottom="4.0" left="4.0" right="4.0" top="2.0"/>
            </BorderPane.margin>
        </StackPane>
    </center>
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <HBox spacing="4.0">
                    <children>
                        <Button onAction="#onCreateSnapshotClicked" text="Create screenshot"/>
                        <Button onAction="#onSaveClicked" text="Save to file"/>
                        <Button onAction="#onOpenInEditorClicked" text="Open in editor" fx:id="btnOpenInEditor" visible="false" managed="false"/>
                    </children>
                </HBox>
                <Button onAction="#onOpenFolderClicked" text="Open snapshot folder" AnchorPane.rightAnchor="0.0"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
            </BorderPane.margin>
        </AnchorPane>
    </top>
</BorderPane>
